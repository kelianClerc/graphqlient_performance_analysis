<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/action"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/unit_1_2"
    android:background="@color/white"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    >
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/article_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="@color/eastern_blue"
            android:padding="@dimen/unit_2"
            android:text="Eius aut omnis voluptatem rerum consequatur quos aa"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/article_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/blue_whale"
            android:text="3 actions"
            android:layout_marginBottom="8dp"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/article_name"
            android:layout_marginTop="0dp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/item_preview_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unit_2"
            android:layout_marginTop="@dimen/unit_1"
            android:background="@color/white"
            android:text="Last item :"
            android:textColor="@color/dust_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/article_number"

            />
        <TextView
            android:id="@+id/item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/unit_1_2"
            android:drawableStart="@drawable/ic_item_ok"
            android:gravity="center_vertical"
            android:text="Item "
            android:textColor="@color/dust_gray"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/duration"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_preview_label"
            android:layout_marginBottom="@dimen/unit_2"
            android:layout_marginTop="@dimen/unit_1"
            android:layout_marginStart="@dimen/unit_2"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration : 12min"
            app:layout_constraintBottom_toBottomOf="@id/item_name"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/unit_2"
            app:layout_constraintTop_toTopOf="@id/item_name"
            />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
