<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/action"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_margin="@dimen/unit_1_2"
    android:background="@color/white"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    >
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/article_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/silver"
            android:padding="@dimen/unit_2"
            android:text="Nom de l'action"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/article_number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            tools:layout_editor_absoluteX="4dp"
            tools:layout_editor_absoluteY="29dp"
            />
        <TextView
            android:id="@+id/article_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/silver"
            android:padding="@dimen/unit_2"
            android:text="3 actions"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/article_name"
            tools:layout_editor_absoluteX="291dp"
            tools:layout_editor_absoluteY="29dp"
            />
        <TextView
            android:id="@+id/item_preview_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unit_2"
            android:layout_marginTop="@dimen/unit_1"
            android:background="@color/white"
            android:text="Last item :"
            android:textColor="@color/dust_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/article_name"

            />
        <include
            android:id="@+id/item"
            layout="@layout/partial_item"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_preview_label"
            app:layout_constraintBottom_toBottomOf="parent"

            />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
